<mvc:View
    controllerName="com.masterdetail.masterdetails.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
>
    <Page id="page">
        <customHeader>
            <OverflowToolbar id="id">
                <content>
                    <ToolbarSpacer id="spacer-1" />
                    <Title
                        id="web-title"
                        text="Order Summary Master Details"
                    />
                    <ToolbarSpacer id="spacer-2" />
                </content>
            </OverflowToolbar>
        </customHeader>
        <content>
            <SplitContainer
                initialMaster="master"
                initialDetail="orderDetail"
                id="SplitCont"
            >
                <detailPages>
                    <Page
                        id="orderDetail"
                        title="Order Details"
                    >
                        <Table
                            id="orderTable"
                            items="{/Order_Details}"
                        >
                            <columns>
                                <Column id="col-1">
                                    <Text
                                        id="t-1"
                                        text="Order ID"
                                    />
                                </Column>
                                <Column id="col-2">
                                    <Text
                                        id="t-2"
                                        text="Product ID"
                                    />
                                </Column>
                                <Column id="col-3">
                                    <Text
                                        id="t-3"
                                        text="Unit Price"
                                    />
                                </Column>
                                <Column id="col-4">
                                    <Text
                                        id="t-4"
                                        text="Quantity"
                                    />
                                </Column>
                                <Column id="col-5">
                                    <Text
                                        id="t-5"
                                        text="Discount"
                                    />
                                </Column>
                            </columns>
                            <items>
                                <ColumnListItem id="columns-content" type="Navigation" press="onPressOrderDetail">
                                    <cells>
                                        <Text id="item-1" text="{OrderID}" />
                                        <Text id="item-2" text="{ProductID}" />
                                        <Text id="item-3" text="{UnitPrice}" />
                                        <Text id="item-4" text="{Quantity}" />
                                        <Text id="item-5" text="{Discount}" />
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </Page>

                    <Page id="productsDetail" title="Product">
                        <VBox id="formBox">
                            <f:SimpleForm
                                editable="false"
                                labelSpanL="3"
                                labelSpanM="3"
                                labelSpanS="12"
                                columnsXL="1"
                                columnsL="1"
                                columnsM="1"
                                id="simpleForm-1"
                                emptySpanL="4"
                                emptySpanM="4"
                                emptySpanXL="4"
                                emptySpanS="0"
                                layout="ResponsiveGridLayout"
                            >
                                <f:content>
                                    <Label id="pn-label" text="Product Name" />
                                    <Text id="pn" text="{/ProductName}" />
                                    <Label id="si-label" text="Supplier ID" />
                                    <Text id="si" text="{/SupplierID}" />
                                    <Label id="qpu-label" text="Quantity Per Unit" />
                                    <Text id="qpu" text="{/QuantityPerUnit}" />
                                    <Label id="up-label" text="Unit Price" />
                                    <Text id="up" text="{/UnitPrice}" />
                                    <Label id="uoo-label" text="Units On Order" />
                                    <Text id="uoo" text="{/UnitsOnOrder}" />
                                </f:content>
                            </f:SimpleForm>
                        </VBox>
                    </Page>
                </detailPages>

                <masterPages>
                    <Page id="master" title="Order Master">
                        <List
                            id="OrderList"
                            items="{/Orders}"
                            itemPress="onListPress"
                        >
                            <items>
                                <StandardListItem
                                    id="myorder"
                                    title="{OrderID}"
                                    type="Navigation"
                                />
                            </items>
                        </List>
                    </Page>
                </masterPages>
            </SplitContainer>
        </content>
    </Page>
</mvc:View>
